                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:onClick="countBox"
                    android:text="Cura"
                    android:textColor="@color/my_primary_color"
                    android:textSize="18sp" />

                <CheckBox
