                android:layout_height="match_parent"
                android:layout_weight="1">

                <CheckBox
                    android:id="@+id/perception"
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:onClick="countBox"
